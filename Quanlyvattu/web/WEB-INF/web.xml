<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.general.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RequestPasswordServlet</servlet-name>
        <servlet-class>controller.RequestPasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>controller.general.DashboardServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuditLogServlet</servlet-name>
        <servlet-class>controller.general.AuditLogServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StatisticsServlet</servlet-name>
        <servlet-class>controller.general.StatisticsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CatalogServlet</servlet-name>
        <servlet-class>controller.general.CatalogServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ApproveAndRejectRequestServlet</servlet-name>
        <servlet-class>controller.director.ApproveAndRejectRequestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreatePurchaseOrderServlet</servlet-name>
        <servlet-class>controller.staff.CreatePurchaseOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RequestPasswordServlet</servlet-name>
        <url-pattern>/request-password</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/advanced-dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuditLogServlet</servlet-name>
        <url-pattern>/audit-log</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StatisticsServlet</servlet-name>
        <url-pattern>/statistics</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CategoryServlet</servlet-name>
        <servlet-class>controller.general.CategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/catalog-management</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ApproveAndRejectRequestServlet</servlet-name>
        <url-pattern>/approveandrejectrequest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreatePurchaseOrderServlet</servlet-name>
        <url-pattern>/create-po</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EventActionServlet</servlet-name>
        <servlet-class>controller.calendar.EventActionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EventActionServlet</servlet-name>
        <url-pattern>/event-action</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CalendarDataServlet</servlet-name>
        <servlet-class>controller.calendar.CalendarDataServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CalendarDataServlet</servlet-name>
        <url-pattern>/calendar-data</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
  

</web-app>
